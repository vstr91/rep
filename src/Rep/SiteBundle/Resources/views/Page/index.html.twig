{% extends "::base.html.twig" %}
{% block conteudo %}
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h3 class="text-center">Repert&oacute;rio Atual</h3>
                <div class="coluna-lista-musicas">
                    {% include 'RepSiteBundle:Musica:tabela-cadastrados-index.html.twig' 
                          with {'musicas': musicasAtivas} %}
                </div>
            </div>
            <div class="col-md-4">
                <h3 class="text-center">M&uacute;sicas por Artista<br /><small>Ativas e em Espera</small></h3>
                <div class="coluna-lista-musicas">
                    {% include 'RepSiteBundle:Artista:tabela-cadastrados-index.html.twig' 
                          with {'artistas': artistas} %}
                </div>
            </div>
            <div class="col-md-4">
                <h3 class="text-center">Pr&oacute;ximos Eventos</h3>
                <div class="coluna-lista-musicas">
                    {% include 'RepSiteBundle:Evento:tabela-cadastrados-index.html.twig' 
                          with {'eventos': proximosEventos} %}
                </div>
                <a href="{{ path('rep_site_eventos') }}" class="btn btn-brand">Gerenciar Eventos</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <h3 class="text-center">M&uacute;sicas em Espera</h3>
                <div class="coluna-lista-musicas">
                    {% include 'RepSiteBundle:Musica:tabela-cadastrados-index.html.twig' 
                          with {'musicas': musicasEmEspera} %}
                </div>  
            </div>
            <div class="col-md-4">
                <h3 class="text-center">M&uacute;sicas por Situa&ccedil;&atilde;o</h3>
                <div class="coluna-lista-musicas">
                    {% include 'RepSiteBundle:Musica:grafico-situacao-index.html.twig' 
                          with {'musicas': musicas} %}
                </div>  
            </div>
            <div class="col-md-4">
                <h3 class="text-center">M&uacute;sicas - &Uacute;ltimas Execu&ccedil;&otilde;es</h3>
                <div class="coluna-lista-musicas">
                    {% include 'RepSiteBundle:Musica:tabela-execucoes-index.html.twig' 
                          with {'musicas': execucoes} %}
                </div>  
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal-edicao">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-heading">
                    <a class="modal-close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></a>
                    <h4 class="modal-title" id="titulo-modal">Editar M&uacute;sica</h4>
                </div>
                <div class="modal-inner" id="body-edicao">

                </div>
                <div class="modal-footer">
                    <p class="text-right">
                        <button type="button" class="btn btn-brand" data-dismiss="modal">Fechar</button>
                        <button type="button" class="btn btn-brand-accent" id="btn-editar">Salvar</button>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('/js/Chart.bundle.min.js') }}"></script>
    <script type="text/javascript">
        $('.link-editar').click(function () {

            $idMusica = $(this).attr('href').replace('#', '');

            $url = '{{ path('rep_site_musicas_form') }}' + "/" + $idMusica;

            $('#titulo-modal').html("Editar M&uacute;sica");

            $.ajax({
                type: 'GET',
                url: $url,
                success: function (response) {
                    $('#body-edicao').html(response);
                    $('#btn-editar').show();
                    $('#modal-edicao').modal('show');
                }
            });

            return false;

        });

        $('.link-editar-evento').click(function () {

            $idEvento = $(this).attr('href').replace('#', '');

            $url = '{{ path('rep_site_eventos_form') }}' + "/" + $idEvento;

            $('#titulo-modal').html("Editar Evento");

            $.ajax({
                type: 'GET',
                url: $url,
                success: function (response) {
                    $('#body-edicao').html(response);
                    $('#btn-editar').show();
                    $('#modal-edicao').modal('show');
                }
            });

            return false;

        });
        
        $('.link-ver-musicas').click(function () {

            $idArtista = $(this).attr('href').replace('#', '');

            $url = '{{ path('rep_site_artistas_musicas') }}' + "/" + $idArtista;

            $('#titulo-modal').html("Lista de MÃºsicas");

            $.ajax({
                type: 'GET',
                url: $url,
                success: function (response) {
                    $('#body-edicao').html(response);
                    $('#btn-editar').hide();
                    $('#modal-edicao').modal('show');
                }
            });

            return false;

        });
        
        // ######### ARTISTAS ###########
        
        var labels = [
            {% for art in artistas %}
                    "{{ art.artista.nome }}"
                    {% if not loop.last %}
                        ,
                    {% endif %}
            {% endfor %}
        ];
        
        var data = [
            {% for art in artistas %}
                    {{ art.musicas }}
                    {% if not loop.last %}
                        ,
                    {% endif %}
            {% endfor %}
        ];

        var ctx = $("#myChart");
        var myChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: labels,
                datasets: [{
                    data: data,
                    backgroundColor: [
                        {% for art in artistas %}
                            'rgba({{ random(255) }}, {{ random(255) }}, {{ random(255) }}, .7)'
                            {% if not loop.last %}
                                ,
                            {% endif %}
                        {% endfor %}
                    ]
                }]
            },
            options: {
                legend: {
                    position: 'bottom'
                }
            }
        });
        
        // ######### FIM ARTISTAS #############
        
        // ######### MUSICAS ###########
        
        var labels2 = [
            {% for mus in musicas %}
                
                {% if mus.status == 0 %}
                    "Ativo"
                {% elseif mus.status == 1 %}
                    "Em Espera"
                {% else %}
                    "Inativo"
                {% endif %}

                {% if not loop.last %}
                    ,
                {% endif %}
            {% endfor %}
        ];
        
        var data2 = [
            {% for mus in musicas %}
                    {{ mus.quantidade }}
                    {% if not loop.last %}
                        ,
                    {% endif %}
            {% endfor %}
        ];

        var ctx2 = $("#myChart2");
        var myChart2 = new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: labels2,
                datasets: [{
                    data: data2,
                    backgroundColor: [
                        {% for mus in musicas %}
                            'rgba({{ random(255) }}, {{ random(255) }}, {{ random(255) }}, .7)'
                            {% if not loop.last %}
                                ,
                            {% endif %}
                        {% endfor %}
                    ]
                }]
            },
            options: {
                legend: {
                    position: 'bottom'
                }
            }
        });
        
        // ######### FIM MUSICAS #############
        
    </script>
{% endblock %}