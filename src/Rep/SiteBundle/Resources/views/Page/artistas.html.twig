{% extends "::base.html.twig" %}
{% block principal %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">Artistas</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form name="form-artista" id="form-artista" method="POST" 
                      action="{{ path('rep_site_artistas_cadastra', {'id_artista': -1}) }}">
                    {{ form_widget(formArtista) }}
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-center">Artistas Cadastrados</h3>
                {% include 'RepSiteBundle:Artista:tabela-cadastrados.html.twig' 
                          with {'artistas': artistas} %}
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal-edicao">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-heading">
                    <a class="modal-close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></a>
                    <h4 class="modal-title">Editar Artista</h4>
                </div>
                <div class="modal-inner" id="body-edicao">

                </div>
                <div class="modal-footer">
                    <p class="text-right">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                        <button type="button" class="btn btn-primary" id="btn-editar">Salvar</button>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    {{ parent() }}
    <script type="text/javascript">
        $('.link-editar').click(function () {

            $idArtista = $(this).attr('href').replace('#', '');

            $url = '{{ path('rep_site_artistas_form') }}' + "/" + $idArtista;

            $.ajax({
                type: 'GET',
                url: $url,
                success: function (response) {
                    $('#body-modal').html(response);
                    $('#titulo-modal').html("Editar Artista");
                    $('#modal').modal('show');
                }
            });

            return false;

        });
    </script>
{% endblock %}