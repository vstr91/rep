<table class="table table-hover table-striped text-center">
    <thead>
        <tr>
            <td>Cont.</td>
            <td>Nome</td>
            <td>Artista</td>
            <td>A&ccedil;&otilde;es</td>
        </tr>
    </thead>
    <tbody>
        {% for mus in musicas %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ mus.musica.nome }}</td>
                <td>{{ mus.musica.artista.nome }}</td>
                <td>
                    <a class="link-editar-musica" href="#{{ mus.id }}">Alterar Status</a> |
                    <a class="link-remover-musica" href="#{{ mus.musica.id }}">Remover</a> |
                    <a href="{{ path('rep_site_musicas_detalhes', {'artista': mus.musica.artista.slug, 'slug': mus.musica.slug}) }}" 
                       target="_blank">Ver Detalhes</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>