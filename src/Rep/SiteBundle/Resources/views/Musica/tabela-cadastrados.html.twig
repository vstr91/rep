<table class="table table-hover table-striped text-center">
    <thead>
        <tr>
            <td>Nome</td>
            <td>Artista</td>
            <td>Status</td>
            <td>A&ccedil;&otilde;es</td>
        </tr>
    </thead>
    <tbody>
        {% for musica in musicas %}
            <tr>
                <td>{{ musica.nome }}</td>
                <td>{{ musica.artista.nome }}</td>
                <td>
                    {% if musica.status == 0 %}
                        Ativo
                    {% elseif musica.status == 1 %}
                        Em Espera
                    {% elseif musica.status == 2 %}
                        Inativo
                    {% endif %}
                </td>
                <td>
                    <a class="link-editar" href="#{{ musica.id }}">Editar</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>