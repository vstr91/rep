{% extends "::base.html.twig" %}
{% block conteudo %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-center">{{ evento.nome }}<br /><small>{{ evento.data|date('d/m/Y H:i') }}</small></h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12" id="coluna-repertorio">
                <h3 class="text-center">Repert&oacute;rio<br /><small>Arraste para reordenar</small></h3>
                <div id="caixa-repertorio">
                    {% include 'RepSiteBundle:Musica:lista-cadastrados.html.twig' 
                          with {'musicas': musicasEvento} %}
                </div>
{#                <a href="#" class="btn btn-brand-accent" id="btn-divisor">Adicionar Divisor de Bloco</a>&nbsp;&nbsp;#}
                <a href="#" class="btn btn-brand-accent" id="btn-adiciona-musica">Adicionar M&uacute;sica</a>&nbsp;&nbsp;
                <a href="{{ referer }}" class="btn" id="btn-voltar">Voltar</a>
                <a href="{{ path('rep_site_gera_pdf_repertorio_evento', {'slug': evento.slug}) }}" 
                   class="btn btn-brand-accent right" id="btn-pdf" target="_blank">Gerar PDF</a><br /><br /><br /><br />
            </div>
        </div>
                   <div class="row">
                       <div class="col-md-12">
                           <h3 class="text-center">Coment&aacute;rios</h3>
                           <div id="caixa-comentarios">
                                {% include 'RepSiteBundle:ComentarioEvento:lista-cadastrados.html.twig' 
                                      with {'comentarios': comentarios} %}
                            </div>
                       </div>
                   </div>
       <div class="row">
           <div class="col-md-9 col-md-offset-1">
               <input type="text" class="form-control" id="input-comentario" placeholder="Faça um comentário aqui" />
               <br /><br />
           </div>
           <div class="col-md-2">
               <button type="button" class="btn btn-brand-accent" id="btn-enviar-comentario">Enviar</button>
           </div>
       </div>
    </div>
    <div class="modal fade" id="modal-edicao">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-heading">
                    <a class="modal-close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></a>
                    <h4 class="modal-title">Adicionar M&uacute;sica</h4>
                </div>
                <div class="modal-inner" id="body-edicao">

                </div>
                <div class="modal-footer">
                    <p class="text-right">
                        <button type="button" class="btn btn-brand" data-dismiss="modal">Fechar</button>
                        <button type="button" class="btn btn-brand-accent" id="btn-editar">Salvar</button>
                    </p>
                </div>
            </div>
        </div>
    </div>

            <div class="modal fade" id="modal-load">
        <div class="modal-dialog">
            <div class="modal-content" id="content-load">
                <div class="modal-inner text-center">
                    <img src="{{ asset('imagens/load.gif') }}" />
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block js %}
    {{ parent() }}
    <script src="{{ asset('js/jquery.form.min.js') }}"></script>
    <script src="{{ asset('js/Sortable.min.js') }}"></script>
    <script type="text/javascript">

        function carregarTabela() {
            $url = '{{ path('rep_site_tabela_musicas_evento', {'id_evento': evento.id}) }}';

            $.ajax({
                type: 'GET',
                url: $url,
                success: function (response) {
                    $('#caixa-repertorio').html(response);
                    criarSort();
                }
            });
        }
        
        function carregarComentarios() {
            $url = '{{ path('rep_site_tabela_comentarios_evento', {'id_evento': evento.id}) }}';

            $.ajax({
                type: 'GET',
                url: $url,
                success: function (response) {
                    $('#caixa-comentarios').html(response);
                    $('#input-comentario').val('');
                }
            });
        }
        
        function criarSort(){
            var el = document.getElementById('body-musicas-evento');
            var sortable = Sortable.create(el, {
                draggable: 'tr',
                onEnd: function (evt) {
                    
                    $('.index-musica').each(function(i, obj) {
                        $(obj).html(i+1);
                        
                        $umaOrdem  = {
                            'id': $(obj).data('id'),
                            'ordem': i+1
                        };
                        
                        $ordem.push($umaOrdem);
                        
                    });
                    
                    $url = '{{ path('rep_site_form_cadastra_ordem_musicas_evento', {'id_evento': evento.id}) }}';

                    $.ajax({
                        type: 'POST',
                        data: {
                            'ordem': $ordem
                        },
                        url: $url,
                        success: function (response) {

                        }
                    });
                    
                }
            });
        }

        $ordem = [];

        $(document).ready(function () {
            
            criarSort();
            
            $('#btn-adiciona-musica').click(function () {

                $url = '{{ path('rep_site_form_cadastra_musicas_evento', {'id_evento': evento.id}) }}';

                $.ajax({
                    type: 'GET',
                    url: $url,
                    success: function (response) {
                        $('#body-edicao').html(response);
                        $('#btn-editar').show();
                        $('#modal-edicao').modal('show');
                    }
                });

                return false;

            });
            
            $('#btn-divisor').click(function() {
                $('#body-musicas-evento').append('<tr><td colspan="4" class="text-center">INTERVALO</td></tr>');
                
                $url = '{{ path('rep_site_cadastra_intervalo_evento', {'id_evento': evento.id}) }}';

                $.ajax({
                    type: 'GET',
                    url: $url,
                    success: function (response) {
                        
                    }
                });
                
                return false;
                
            });

            $(document).on('click', '.link-remover-musica', function(){

                $id = $(this).attr('href').replace('#', '');

                $url = '{{ path('rep_site_remove_musica_evento', {'id_evento': evento.id}) }}/' + $id;

                $('#modal-load').modal('show');

                $.ajax({
                    type: 'GET',
                    url: $url,
                    success: function (response) {
                        $('#modal-load').modal('hide');
                        carregarTabela();
                    }
                });

                return false;

            });
            
            $('#btn-editar').click(function(){
                $('#form-adiciona-musica-evento').submit();
                $('#modal-edicao').modal('hide');
            });
            
            $('#btn-enviar-comentario').click(function(){
                
                $comentario = $('#input-comentario').val();
                
                if($comentario != null){
                    $url = '{{ path('rep_site_form_cadastra_comentario_evento', {'id_evento': evento.id}) }}';

                    $.ajax({
                        type: 'POST',
                        data: {
                            'comentario': $comentario
                        },
                        url: $url,
                        success: function (response) {
                            carregarComentarios();
                        }
                    });
                } else{
                    alert("Por favor digite o comentário.");
                }
                
                
                
            });

        });
    </script>
{% endblock %}